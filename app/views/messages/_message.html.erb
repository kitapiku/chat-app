<div class="message">
  <div class="message-top">
    <div class="message-top-name">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>
    </div>
    <div class="message-top-time">
      <!-- 投稿した時刻を出力する -->
      <%= message.created_at %>
    </div>
  </div>
  <div class="message-text">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>
  </div>
</div>
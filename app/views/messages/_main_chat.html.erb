<div class="main-chat">
  <div class="mc-top">
    <div class="mc-top-roomname">
      roomname
    </div>
    <div class="mc-top-roomdelete">
      <a href="#">チャットを終了する</a>
    </div>
  </div>

  <div class="mc-middle">
    <div class="message">
      <div class="message-top">
        <div class="message-top-name">Tom</div>
        <div class="message-top-time">2020/7/16/3:49:00</div>
      </div>
      <div class="message-text">おはよう</div>
    </div>
  </div>
  <div class="mc-bottom">
    <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
      <div class="form-input">
        <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
        <label class="form-image">
          <span class="image-file">画像</span>
          <%= f.file_field :image, class: 'hidden' %>
        </label>
      </div>
      <%= f.submit '送信', class: 'form-submit' %>
    <% end %>
  </div>
</div>